<circuit access="public">
	
	<prefuseaction name="">
	   <do action="showHeader"/>
	</prefuseaction>
	
	<postfuseaction name="">
       <do action="showFooter"/>
    </postfuseaction>
	
	<fuseaction name="test" >
		<loop collection="MyFuses::getInstance()->getApplications()" index="$key" item="$application" >
            <if condition="$key == Application::DEFAULT_APPLICATION_NAME">
                <false>
                    <include file="test.php"/>
                </false>
            </if>
		</loop>
	</fuseaction>
	
	<fuseaction name="login">
	   <include file="dspFormLogin.php"/>
    </fuseaction>
	
	<fuseaction name="logout">
    </fuseaction>
	
	<fuseaction name="start">
	    <xfa name="goToApplicationSummary" value="application.sumary" />
        <include file="dspApplicationList.php" />
	</fuseaction>
	
	<fuseaction name="showHeader">
	   <xfa name="goToLogin" value="login" />
	   <xfa name="goToLogout" value="logout" />
	   <xfa name="goToStart" value="start" />
	   <include file="dspHeader.php" />
	</fuseaction>
	
	<fuseaction name="showFooter">
       <include file="dspFooter.php" />
    </fuseaction>
	
</circuit>